<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
  <data>
    <variable name="state" type="io.craftedcourses.kitchensink.bmi.BmiState"/>

  </data>
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".bmi.BmiActivity">

    <SeekBar
      android:id="@+id/weightSeekBar"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"/>

    <TextView
      android:id="@+id/weightTextView"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="end"
      android:text="@{@string/weight_format(state.weight)}"
      tools:text="@string/_0_kg"
      android:textColor="@android:color/black"/>

    <SeekBar
      android:id="@+id/heightSeekBar"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"/>

    <TextView
      android:id="@+id/heightTextView"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="end"
      android:text="@{@string/height_format(state.height)}"
      tools:text="@string/_0_cm"
      android:textColor="@android:color/black"/>

    <TextView
      android:id="@+id/bmiTextView"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      android:gravity="center"
      android:text="@{@string/bmi_format(state.bmi)}"
      tools:text="@string/bmi"
      android:textColor="@android:color/black"
      android:textSize="16sp"/>

  </LinearLayout>
</layout>